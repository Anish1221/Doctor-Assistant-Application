<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.birat.Docassist.enterDiagnosisDetails"
    android:background="@drawable/greish"
    android:weightSum="1">

    <TextView
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DIAGNOSTIC DETAILS"
        android:id="@+id/textView"
        android:layout_margin="15dp"
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="#ffffff" />


    <android.support.design.widget.TextInputEditText
        android:id="@+id/enterSymptoms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Symptoms"
        android:background="#F7CE3E"
        android:inputType="textMultiLine"
        android:layout_weight="0.20"
        android:layout_marginTop="50dp" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/enterMedicalTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Medical Test"
        android:textColor="#000000"
        android:background="#F7CE3E"
        android:inputType="textMultiLine"
        android:layout_weight="0.20" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/enterMedicinesPrescribed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Medicines Prescribed"
        android:background="#F7CE3E"
        android:inputType="textMultiLine"
        android:layout_weight="0.20" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/submitDiagnosisDetails"
        android:onClick="submitDiagnosisDetails"
        style="@style/ButtonStyle"

        android:background="@drawable/button_bg_rounded_corners"
        android:layout_marginTop="15dp" />



</LinearLayout>
